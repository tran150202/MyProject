@model SV20T1020598.DomainModels.Customer
@{
    ViewBag.Title = "Xóa khách hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <table class="table table-bordered">
            <tr>
                <th>Tên khách hàng:</th>
                <td>@Model.CustomerName</td>
            </tr>
            <tr>
                <th>Tên giao dịch:</th>
                <td>@Model.ContactName</td>
            </tr>
            <tr>
                <th>Điện thoại:</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Địa chỉ:</th>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <th>Tỉnh/thành:</th>
                <td>@Model.Province</td>
            </tr>
            <tr>
                <th>Trạng thái:</th>
                <td>@(Model.IsLocked ? "Tài khoản đang bị khóa" : "Tài khoản đang hoạt động")</td>
            </tr>
        </table>

        <form action="~/Customer/Delete/@Model.CustomerID" method="post">
            @if (!SV20T1020598.BusinessLayers.CommonDataService.IsUsedCustomer(Model.CustomerID))
            {
                <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa khách hàng này?')">
                    <i class="fa fa-trash"></i> Xác nhận xóa
                </button>
            }
            <a href="~/Customer" class="btn btn-default">
                Quay lại
            </a>
        </form>
    </div>
</div>
