@model SV20T1020598.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Employee/Save" method="post" class="form-horizontal" enctype="multipart/form-data">
            @*  <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" /> *@
            @Html.HiddenFor(m => m.EmployeeID)

            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.FullName)" autofocus value="@Model.FullName" />
                    @Html.ValidationMessage("FullName", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="BirthDate" value="@Model.BirthDate" />
                    <input type="text" class="form-control date-picker"
                           name="BirthDateinput"
                           value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("em-GB"))" />
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Address" value="@Model.Address" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    @* <input type="text" class="form-control" name="Phone" value="@Model.Phone"/> *@
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="Email" value="@Model.Email" />
                    @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="Password" onclick="showPassword()" value="@Model.Password" />
                    @Html.ValidationMessage(nameof(Model.Password), new { @style = "color:#f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Chức vụ:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="@nameof(Model.RoleNames)">
                        <option value="">-- Chọn chức vụ--</option>
                        <option value="admin" selected="@(Model.RoleNames == "admin")">Quản trị viên</option>
                        <option value="employee" selected="@(Model.RoleNames == "employee")">Nhân viên</option>
                    </select>
                    @Html.ValidationMessage(nameof(Model.RoleNames), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="@nameof(Model.IsWorking)" value="true" @(Model.IsWorking ? "checked" : "") /> Nhân viên đang làm việc
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/employees/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>