@model SV20T1020598.Web.Models.ShipperSearchResult
@{
    Layout = null;
}
<div>
    <p style="margin:10px 0 10px 0">Có <strong>@Model.RowCount</strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang</p>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>Tên người giao hàng</th>
                    <th>Điện thoại</th>
                    <th style="width:80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.ShipperName</td>
                        <td>@item.Phone</td>
                        <td>
                            <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                                <i class=" fa fa-edit"></i>
                            </a>
                            <a href="~/Shipper/Delete/@item.ShipperID" class=" btn btn-xs btn-danger">
                                <i class=" fa fa-remove"></i>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.PageCount > 1)
    {
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (Model.Page == p)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="doSearch('#formSearch',@p)">@p</a></li>
                    }
                }

            </ul>
        </div>
    }
</div>

