@{
    ViewBag.Title = "Đổi mật khẩu";
    var userData = User.GetUserData();
}

<div class="">
    <form action="~/Account/ChangePassword" method="post">
        <div class="form-group has-feedback">
            <p>Tài khoản: @userData.UserName</p>
            <span class="glyphicon form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="hidden" class="form-control" name="userName" value="@userData.UserName">
            <span class="">Mật khẩu cũ:</span>
            <input type="password" name="oldPassword" class="form-control" placeholder="Nhập mật khẩu cũ">
        </div>
        <div class="form-group has-feedback">
            <span class="">Mật khẩu mới:</span>
            <input type="password" name="newPassword" class="form-control" placeholder="Nhập mật khẩu mới">
        </div>
        <div class="form-group has-feedback">
            <span class="">Nhập lại mật khẩu mới:</span>
            <input type="password" name="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới">
        </div>
        <div class="row">
            <div class="col-xs-6">
                <button type="submit" class="btn btn-primary btn-sm btn-sm">Xác nhận</button>

                <a href="~/" class="btn btn-default btn-sm btn-sm">Quay lại</a>
            </div>
        </div>
        <div class="form-group mt-3">
            @Html.ValidationMessage("Error", new { @class = "text-danger" })
        </div>
    </form>
</div>
