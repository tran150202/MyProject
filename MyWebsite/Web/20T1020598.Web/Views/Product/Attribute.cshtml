@model SV20T1020598.DomainModels.ProductAttribute
@{
}
<div class="box box-primary">


    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SaveAttribute" method="post" enctype="multipart/form-data">
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <input type="hidden" name="AttributeID" value="@Model.AttributeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    @* <input type="text" class="form-control" name="AttributeName" value="@Model.AttributeName"> *@
                    @Html.TextBoxFor(m => m.AttributeName, new { @class = "form-control select2" })
                    @Html.ValidationMessage(nameof(Model.AttributeName), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị thuộc tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.AttributeValue, new { @class = "form-control select2" })
                    @Html.ValidationMessage(nameof(Model.AttributeValue), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" min="1" value="@Model.DisplayOrder">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10" style="text-align:right">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu hình thuộc tính
                    </button>
                    <a class="btn btn-warning" href="~/Product/Edit/@Model.ProductID">
                        Quay lại
                    </a>
                </div>
            </div>
            @Html.ValidationMessage("Error", new { @style = "color:#f00;font-size:25px" })
        </form>

    </div>

</div>